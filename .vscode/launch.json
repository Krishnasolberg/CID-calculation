{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",  // Ensure the debugger starts in the correct workspace folder
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Add the workspace to PYTHONPATH for imports
            }
        }
    ]
}